<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="opris.horia.calculator.MainActivity">

    <EditText
        android:id="@+id/input_1"
        android:layout_width="368dp"
        android:layout_height="44dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="input"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="6dp" />

    <EditText
        android:id="@+id/input_2"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="input 2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_1" />

    <Button
        android:id="@+id/executeBtn"
        android:layout_width="285dp"
        android:layout_height="51dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:onClick="onClick"
        android:text="Execute"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234" />

    <EditText
        android:id="@+id/outputTxt"
        android:layout_width="368dp"
        android:layout_height="46dp"
        android:layout_marginBottom="293dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="output"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/executeBtn"
        app:layout_constraintVertical_bias="0.6" />
</android.support.constraint.ConstraintLayout>
