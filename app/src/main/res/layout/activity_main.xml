<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="opris.horia.calculator.MainActivity">

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/no_2" />

    <EditText
        android:id="@+id/input_2"
        android:layout_width="0dp"
        android:layout_height="166dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="none"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/outputTxt"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginBottom="285dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/no_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/no_0"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/no_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/no_0"
        app:layout_constraintLeft_toRightOf="@+id/no_1" />

    <Button
        android:id="@+id/enterBtn"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="Enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/add" />

    <Button
        android:id="@+id/no_0"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/no_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/no_2"
        app:layout_constraintLeft_toRightOf="@+id/no_4" />

    <Button
        android:id="@+id/no_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/add"
        app:layout_constraintLeft_toRightOf="@+id/no_2" />

    <Button
        android:id="@+id/no_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/no_1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/no_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/no_3"
        app:layout_constraintLeft_toRightOf="@+id/no_5" />

    <Button
        android:id="@+id/no_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/no_4"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/no_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/no_5"
        app:layout_constraintLeft_toRightOf="@+id/no_7" />

    <Button
        android:id="@+id/no_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/no_6"
        app:layout_constraintLeft_toRightOf="@+id/no_8" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@+id/no_7"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/divideBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/no_8"
        app:layout_constraintLeft_toRightOf="@+id/cancelBtn" />

    <Button
        android:id="@+id/multiplyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/no_9"
        app:layout_constraintLeft_toRightOf="@+id/divideBtn" />

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/no_9"
        app:layout_constraintLeft_toRightOf="@+id/multiplyBtn" />

    <Button
        android:id="@+id/plusBtn"
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calcButtonPressed"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/enterBtn"
        app:layout_constraintLeft_toRightOf="@+id/no_9" />

</android.support.constraint.ConstraintLayout>
